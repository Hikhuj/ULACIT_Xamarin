        <Label Text="Hola Mundo!!!"
               TextColor="Red"
               VerticalOptions="Center"
               HorizontalOptions="Center"
               BackgroundColor="Black"
               WidthRequest="150">
            <!-- Estos son VIEWS tambien -->
            <Label.FormattedText>
                <FormattedString>
                    <Span Text="Texto alterno 1"
                          FontAttributes="Bold"
                          FontSize="Large"
                        />
                    <Span Text="Texto alterno 2"
                          FontAttributes="Bold"
                          TextColor="DarkGoldenrod"
                        />
                </FormattedString>
            </Label.FormattedText>
        </Label>

        <Picker x:Name="picker"
                Title="Seleccionar..."
                TextColor="Blue"
                SelectedIndexChanged="picker_SelectedIndexChanged">
            <Picker.Items>
                <x:String>Mario Bros</x:String>
                <x:String>Halo</x:String>
                <x:String>Gears of Wars</x:String>
                <x:String>FIFA</x:String>
            </Picker.Items>
        </Picker>

        <ProgressBar x:Name="progress"
                     Progress="0.10"
                     />

        <Button Text="Simular"
                x:Name="btnSimular"
                Clicked="btnSimular_Clicked"
                />

        <SearchBar Placeholder="Buscar..."
                   CancelButtonColor="Red"
                   SearchButtonPressed="SearchBar_SearchButtonPressed"
                   TextChanged="SearchBar_TextChanged"
                   />

    </StackLayout>

</ContentPage>
