                HeightRequest="150"
                Text="Texto"
                FontSize="Large"
                TextColor="Blue" />

        <Entry 
            VerticalOptions="Center"
            HorizontalOptions="FillAndExpand"
            IsPassword="False"
            Placeholder="Usuario"
            PlaceholderColor="Green"
            Text="Username"
            TextColor="Coral"
            FontAttributes="Italic"
            FontSize="Large"/>

        <Image Source="Xamarin.png"
